@model Blog

<div class="align-items-center">
    <h3>Create Blog</h3>
</div>
<hr />
<div class="row">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" placeholder="Judul nya disini" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <div id="editor">
                    @*<p>Hello World!</p>
                    <p>Some initial <strong>bold</strong> text</p>
                    <p><br></p>*@
                </div>
                <textarea asp-for="Content" class="d-none" id="cc" name="Content"></textarea>
            </div>
            @* <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <div id="summernote"></div>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Title" class="text-danger"></span>
                </div>*@
            <div class="form-group">

                <label asp-for="CreateDate" class="control-label"></label>
                <input asp-for="CreateDate" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-check">
                <label class="form-check-label">
                    <input asp-for="Status" class="form-check-input" />@Html.DisplayNameFor(model => model.Status)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" class="btn-primary" />
            </div>
        </form>
    </div>
</div>

