        $(document).ready(function () {
            var quill = new Quill('#editor', {
                modules: { toolbar: true },
                theme: 'snow'
            });

            quill.on('text-change', function (delta, oldDelta, source) {
                $("#cc").val(quill.getText())
                console.log(quill.getText())
            });
        });
    </script>
